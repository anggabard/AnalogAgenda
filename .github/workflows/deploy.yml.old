name: Build & Deploy AnalogAgenda to Azure Container Apps

on:
  push:
    branches: [ main ]
    paths-ignore:
      - "**/*.md"
      - ".github/workflows/test-pipeline.yml"
  workflow_dispatch:

env:
  CONFIGURATION: Release
  DOTNET_VERSION: '8.0.x'
  NODE_VERSION: '20.x'
  WORKING_DIRECTORY: .

jobs:
  test:
    runs-on: windows-latest

    steps:
    - uses: actions/checkout@v4

    - name: Setup .NET SDK
      uses: actions/setup-dotnet@v4
      with:
        dotnet-version: ${{ env.DOTNET_VERSION }}

    - name: Setup Node.js
      uses: actions/setup-node@v4
      with:
        node-version: ${{ env.NODE_VERSION }}

    - name: Restore dependencies
      run: dotnet restore ${{ env.WORKING_DIRECTORY }}/AnalogAgenda.sln

    - name: Build solution
      run: dotnet build ${{ env.WORKING_DIRECTORY }}/AnalogAgenda.sln --configuration ${{ env.CONFIGURATION }} --no-restore

    - name: Run Server unit tests
      run: |
        dotnet test ${{ env.WORKING_DIRECTORY }}/Tests/AnalogAgenda.Server.Tests/AnalogAgenda.Server.Tests.csproj --configuration ${{ env.CONFIGURATION }} --no-build --verbosity normal
    
    - name: Run Database unit tests
      run: |
        dotnet test ${{ env.WORKING_DIRECTORY }}/Tests/Database.Tests/Database.Tests.csproj --configuration ${{ env.CONFIGURATION }} --no-build --verbosity normal

    - name: Run frontend tests
      working-directory: ${{ env.WORKING_DIRECTORY }}/analogagenda.client
      run: npm run test -- --watch=false --browsers=ChromeHeadless

  deploy:
    needs: test
    runs-on: ubuntu-latest
    if: github.ref == 'refs/heads/main'

    steps:
    - uses: actions/checkout@v4

    - name: Setup .NET SDK
      uses: actions/setup-dotnet@v4
      with:
        dotnet-version: ${{ env.DOTNET_VERSION }}

    - name: Setup Node.js
      uses: actions/setup-node@v4
      with:
        node-version: ${{ env.NODE_VERSION }}

    - name: Install Azure Developer CLI
      uses: Azure/setup-azd@v1.0.0

    - name: Azure Login
      uses: azure/login@v2
      with:
        creds: ${{ secrets.AZURE_CREDENTIALS }}

    - name: Initialize Azure Developer CLI
      run: |
        azd auth login --client-id ${{ secrets.AZURE_CLIENT_ID }} --client-secret ${{ secrets.AZURE_CLIENT_SECRET }} --tenant-id ${{ secrets.AZURE_TENANT_ID }}

    - name: Provision Infrastructure
      run: |
        azd provision --no-prompt

    - name: Deploy Application
      run: |
        azd deploy --no-prompt

    - name: Get deployment outputs
      run: |
        azd output
